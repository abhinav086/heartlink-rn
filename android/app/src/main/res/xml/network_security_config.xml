<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!-- Allow cleartext traffic for localhost, emulator IPs, your API domain, and ZEGOCLOUD domains -->
    <domain-config cleartextTrafficPermitted="true">
        <!-- Emulator / local testing domains -->
        <domain includeSubdomains="true">localhost</domain>
        <domain includeSubdomains="true">10.0.2.2</domain>
        <domain includeSubdomains="true">10.0.3.2</domain>

        <!-- Your backend API domain -->
        <domain includeSubdomains="true">your-api-domain.com</domain>

        <!-- ZEGOCLOUD domains -->
        <domain includeSubdomains="true">zegocloud.com</domain>
        <domain includeSubdomains="true">zego.im</domain>
        <domain includeSubdomains="true">zegoliveroom.com</domain>
        <domain includeSubdomains="true">zego-rtc.com</domain>

        <!-- WebRTC related domains -->
        <domain includeSubdomains="true">stun.zego.im</domain>
        <domain includeSubdomains="true">turn.zego.im</domain>
    </domain-config>

    <!-- Base configuration: block cleartext for all other domains -->
    <base-config cleartextTrafficPermitted="false">
        <trust-anchors>
            <certificates src="system"/>
        </trust-anchors>
    </base-config>
</network-security-config>
